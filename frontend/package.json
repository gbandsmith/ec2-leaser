{
  "name": "@ec2-leaser/frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.1.9",
    "aws-amplify": "^4.0.2",
    "cross-env": "7.x",
    "prettier": "^2.x",
    "prettier-plugin-tailwind": "^2.x",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.24.4",
    "react-scripts": "5.0.0",
    "react-svg-spinner": "^1.0.4"
  },
  "scripts": {
    "start": "sst-env -- react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom ",
    "test:ci": "react-scripts test --env=jsdom --coverage --reporters 'default' --reporters 'jest-junit' --testResultsProcessor './node_modules/jest-sonar-reporter'",
    "format": "prettier --write \"./src/**/*.{js,jsx}\"",
    "sonar": "node sonar.js"
  },
  "jest-junit": {
    "outputDirectory": "test-reports"
  },
  "jestSonar": {
    "reportPath": "test-reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@serverless-stack/static-site-env": "^0.43.8",
    "autoprefixer": "^10.4.2",
    "jest-junit": "^15.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "postcss": "^8.4.6",
    "react-test-renderer": "^17",
    "sonarqube-scanner": "^2.9.1",
    "tailwindcss": "^3.0.22"
  }
}
